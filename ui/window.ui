<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="TFWindow" parent="AdwApplicationWindow">
    <property name="can-focus">False</property>
    <property name="title">Tubefeeder</property>
    <property name="height-request">800</property>
    <property name="width-request">500</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="hexpand">True</property>
            <property name="vexpand">False</property>
            <property name="halign">GTK_ALIGN_FILL</property>
            <property name="valign">GTK_ALIGN_START</property>

            <property name="title-widget">
              <object class="AdwWindowTitle">
                <!-- TODO: Change dynamically -->
                <property name="title">Tubefeeder</property>
              </object>
            </property>

            <child>
              <object class="GtkBox" id="box_refresh">
                <child>
                  <object class="GtkButton" id="btn_reload">
                    <property name="visible">True</property>
                    <property name="action-name">win.reload</property>
                    <child>
                      <object class="GtkImage" id="image_refresh">
                        <property name="icon-name">view-refresh-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinner" id="loading_spinner">
                    <property name="visible">False</property>
                    <property name="spinning">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwViewStack" id="application_stack">
            <child>
              <object class="AdwViewStackPage">
                <property name="name">Feed</property>
                <property name="title">Feed</property>
                <property name="icon-name">go-home-symbolic</property>
                <property name="child">
                  <object class="TFFeedPage" id="feed_page">
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">Watch Later</property>
                <property name="title">Watch Later</property>
                <property name="icon-name">alarm-symbolic</property>
                <property name="child">
                  <object class="TFWatchLaterPage" id="watchlater_page"/>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">Filters</property>
                <property name="title">Filters</property>
                <property name="icon-name">funnel-symbolic</property>
                <property name="child">
                  <object class="GtkBox" id="filter_page"/>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">Subscriptions</property>
                <property name="title">Subscriptions</property>
                <property name="icon-name">library-artists-symbolic</property>
                <property name="child">
                  <object class="GtkBox" id="subscription_page"/>
                </property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class = "AdwViewSwitcher">
              <property name="hexpand">True</property>
              <property name="vexpand">False</property>
              <property name="halign">GTK_ALIGN_FILL</property>
              <property name="valign">GTK_ALIGN_END</property>
              <property name="stack">application_stack</property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
